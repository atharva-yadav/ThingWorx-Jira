{
    "manifest_version": 3,
    "name": "ThingWorx Jira Navigator",
    "version": "1.0",
    "description": "A simple extension that opens a link in a new tab.",
    "icons": {
        "16": "./icons/icon16.jpg",
        "48": "/icons/icon48.jpg",
        "128": "/icons/icon128.jpg"
    },
    "action": {
        "default_popup": "/popup/popup.html",
        "default_icon": "/icons/logo.png",
        "default_title": "Click to open a link in a new tab"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "tabs"
    ]
}