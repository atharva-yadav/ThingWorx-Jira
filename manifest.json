{
    "manifest_version": 3,
    "name": "ThingWorx Jira Navigator",
    "version": "1.0",
    "description": "A simple extension that accepts a jira ticket Id and opens a link in a new tab.",
    "icons": {
        "16": "./icons/icon16.jpg",
        "48": "/icons/icon48.jpg",
        "128": "/icons/icon128.jpg"
    },
    "action": {
        "default_popup": "/popup/popup.html",
        "default_icon": "/icons/logo.png",
        "default_title": "ThingWorx Jira Navigator"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "MacCtrl+Q"
            }
        }
    },
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "tabs"
    ]
}